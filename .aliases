#!/bin/sh

alias ll='ls -la'
alias +x='chmod +x'
alias bitch,='sudo'

# git
alias such='git add . && git commit -am '
alias so='git add . && git commit -am '
alias very='git'
alias wow='git status'

# php
alias compose!='composer install --prefer-dist'
alias ungit='find . -type d -name ".git"; echo "find . -type d -name \".git\" -exec rm -rf {} \;"'
alias php!='php -S 0.0.0.0:8080 index.php'

# docker
alias pma='open "http://127.0.0.1:$((docker start db pma && docker port pma) | tail -n1 | cut -d ":" -f 2)"'

# python
alias pep8='pep8 --max-line-length=120'
alias dt='DJANGO_SETTINGS_MODULE="config.settings_test" python manage.py test' # dt is short for django-test

alias untargz='tar zxvf'

# raspberry pi
alias rw='sudo mount -o remount,rw /'
alias ro='sudo mount -o remount,ro /'
